%header
  %nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid
      .navbar-header
        = image_tag "brand.svg", class: "image-responsive"
        %h1.navbar-brand
          = link_to root_path do
            Abductee Contacts
            
        %button.navbar-toggle.collapsed{ type: "button", "data-toggle" => "collapse", "data-target" => "#main-navbar-collapse", "aria-expanded" => "false" }
          %span.sr-only Toggle Navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

      .collapse.navbar-collapse#main-navbar-collapse
        %ul.nav.navbar-nav.navbar-right
          -if current_user.nil?
            %li= link_to "Login", login_path
            %li= link_to "Signup", signup_path
          -else
            %li.dropdown
              %a.dropdown-toggle{ href: "#", "data-toggle" => "dropdown", role: "button", "aria-haspopup" => "true", "aria-expanded" => "false" }
                = current_user.email
                %span.caret
              %ul.dropdown-menu
                %li= link_to "Logout", logout_path
